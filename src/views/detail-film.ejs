<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <script src="/js/jwplayer-8.9.3.js?ver=6.6.1"></script>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/detail-film.css">
    <script src="https://telegram.org/js/telegram-web-app.js?1"></script>

  </head>
  <body class="bg-dark">
    <div class="bg-dark loading">
      <span class="loader"></span>
    </div>
    <div id="result">
      <div class="container-fluid px-0" style="max-width: 1200px;">
        <div class="bg-dark sticky shadow shadow-1 border-top-0 border-left-0 border-right-0"> 
          <div class="iframe">
            <div class="iframe-box">
              <div id="previewPlayer"></div>
            </div>
          </div>
          <div class="p-2 text-right">
            <a 
              href="<%= currentUrl %>?episode_index=<%= query.server_index %>&server_index=<%= query.episode_index == 0 ? 0 : query.episode_index - 1 %>" 
              class="btn btn-secondary btn-sm rounded-2"
              <%= query.episode_index == 0 ? 'disabled' : '' %>
            >Tập trước</a>
            <a
              href="<%= currentUrl %>?server_index=<%= query.server_index %>&episode_index=<%= query.episode_index == query.episode_index_last ? query.episode_index_last : + query.episode_index + 1 %>" 
              class="btn btn-secondary btn-sm rounded-2"
              <%= query.episode_index_last == query.episode_index  ? 'disabled' : '' %>
            >Tập tiếp theo</a>
            <!-- <button class="btn btn-secondary btn-sm rounded-2" disabled>Yêu thích</button> -->
          </div>
        </div>
        <div class="mt-2 mb-2">
          <% episodes.forEach((episode, index) => {%>
            <div class="card border-0">
              <div class="card-body p-2 bg-dark">
                <h5 class="card-title text-white"><%= index + 1 %>: <%= episode.server_name %></h5>
                <div class="list-episode">
                  <% episode.server_data.forEach((serverData, indexData) => {%>
                    <a href="<%= currentUrl %>?episode_index=<%= indexData %>&server_index=<%= index %>" class="btn 
                      <%= query.server_index == index && query.episode_index == indexData ? 'btn-success' : 'btn-secondary' %>
                      btn-sm rounded-2 w-100"
                    >
                      <%= serverData.name %>
                    </a>
                  <% }) %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

    <script language="javascript">
        window.m3u8Link = "<%= episode.link_m3u8 %>"
    </script>
    <script src="/js/embed.js"></script>
  </body>
</html>